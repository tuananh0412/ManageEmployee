@model IEnumerable<Employee>
@using ManageEmployee.Controllers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-route-enumEmployeesType="@EnumEmployeesType.Experience">Thêm nhân viên lâu năm</a> |
    <a asp-action="Create" asp-route-enumEmployeesType="@EnumEmployeesType.Fresher">Thêm nhân viên mới ra trường</a> |
    <a asp-action="Create" asp-route-enumEmployeesType="@EnumEmployeesType.Intern">Thêm thực tập sinh</a>
</p>

<form asp-controller="Employees" asp-action="Index">
    <p>
        Tên nhân viên: <input type="text" name="SearchString" />
        <input type="submit" value="Tìm kiếm" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Certificates)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Certificates.Count)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EmployeeId">Sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.EmployeeId">Chi tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.EmployeeId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
